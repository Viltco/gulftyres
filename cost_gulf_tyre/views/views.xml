<odoo>
  <data>

      <record id="inherit_fields_in_gulf_cost_tyres_tree" model="ir.ui.view">
          <field name="name">inherit fields in gulf tree view</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_tree_view"/>
          <field name="mode">primary</field>
          <field name="arch" type="xml">

              <field name="name" position="after">
                  <field name="brand"/>
              </field>

              <field name="name" position="before">
                  <field name="barcode"/>
              </field>
              <field name="brand" position="after">
                  <field name="dot"/>
                  <field name="qty_available"/>
                  <field name="shj"/>
                  <field name="shjsm"/>
                  <field name="quz"/>
                  <field name="ain"/>
                  <field name="ainw"/>
                  <field name="ajm"/>
                  <field name="albr"/>
                  <field name="ban"/>
                  <field name="abu"/>
                  <field name="abuold"/>
                  <field name="mzr"/>
                  <field name="sale1"/>
                   <field name="sale2"/>
                       <field name="sale3"/>
                       <field name="wavrg"/>
                       <field name="standard_price"/>

                  <field name="res_stk"/>
                  <field name="p_inv"/>


              </field>


              <field name="brand" position="attributes">
                  <attribute name="string">Brand Code</attribute>
              </field>
              <field name="barcode" position="attributes">
                  <attribute name="string">Item Code</attribute>
              </field>

              <field name="qty_available" position="attributes">
                  <attribute name="string">Stock</attribute>
              </field>
              <field name="virtual_available" position="attributes">
                  <attribute name="string">Pur-Ord</attribute>
              </field>
                <xpath expr="//field[@name='virtual_available']" position="after">
                  <field name="pur_dt"/>
                    <field name="pur_qty"/>
              </xpath>
<!--              <xpath expr="//field[@name='dot']" position="after">-->
<!--                  <field name="qty_available"/>-->
<!--              </xpath>-->


          </field>
      </record>


      <record id="inherit_fields_in_gulf_cost_tyres_form" model="ir.ui.view">
          <field name="name">inherit fields in gulf form view</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_only_form_view"/>
          <field name="arch" type="xml">
              <xpath expr="//div[@name='button_box']" position="inside">
              </xpath>
              <xpath expr="//field[@name='barcode']" position="after">
                  <field name="dot"/>
              </xpath>
              <xpath expr="//field[@name='default_code']" position="after">
                  <field name="brand"/>
              </xpath>
              <xpath expr="//field[@name='company_id']" position="after">
                  <field name="sale1"/>
              </xpath>
              <xpath expr="//field[@name='sale1']" position="after">
                  <field name="sale2"/>
              </xpath>
              <xpath expr="//field[@name='sale2']" position="after">
                  <field name="sale3"/>
              </xpath>
              <xpath expr="//field[@name='dot']" position="after">
                  <field name="p_inv"/>
                   <field name="pur_qty"/>
                   <field name="res_stk"/>

              </xpath>
          </field>
      </record>
  </data>
</odoo>